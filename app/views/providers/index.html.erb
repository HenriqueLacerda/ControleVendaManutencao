<h1>Listing providers</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Endereco</th>
    <th>Numero</th>
    <th>Bairro</th>
    <th>City</th>
    <th>Cidade</th>
    <th>Estado</th>
    <th>Cep</th>
    <th>Obs</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @providers.each do |provider| %>
  <tr>
    <td><%= provider.nome %></td>
    <td><%= provider.endereco %></td>
    <td><%= provider.numero %></td>
    <td><%= provider.bairro %></td>
    <td><%= provider.city %></td>
    <td><%= provider.cidade %></td>
    <td><%= provider.estado %></td>
    <td><%= provider.cep %></td>
    <td><%= provider.obs %></td>
    <td><%= link_to 'Show', provider %></td>
    <td><%= link_to 'Edit', edit_provider_path(provider) %></td>
    <td><%= link_to 'Destroy', provider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo Fornecedor', new_provider_path, :class => 'btn btn-success' %>
