<%= simple_form_for(@service) do |f| %>
  <%= f.error_notification %>

  <div class="row-fluid">
    <div class="span12">
      <div class="field">
        <%= f.input :nome, :input_html => { :type => 'text'}, label: 'Nome' %>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span6">
      <div class="field">
        <%= f.input :descricao, :input_html => { :type => 'text'}, label: 'Descrição' %>
      </div>
    </div>
    <div class="span6">
      <div class="field">
        <%= f.input :valor, :input_html => { :type => 'text'}, label: 'Valor' %>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <div class="field">
    	<%= f.submit :class => 'btn btn-success' %>
	  </div>
    </div>
  </div>
<% end %>
<script type="text/javascript">
    $("#service_valor").maskMoney({symbol:"R$",decimal:",",thousands:"."})
</script>