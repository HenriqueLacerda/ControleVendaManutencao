<%= simple_form_for(@product) do |f| %>

<div class="row-fluid">
	<div class="span12">
		<%= f.input :nome, label: 'Nome' %>
	</div>
</div>
<div class="row-fluid">
	<div class="span12">
		<%= f.input :descricao, label: 'Descrição' %>
	</div>
</div>
<div class="row-fluid">
	<div class="span6">
		<%= f.association :categoryProduct, collection: CategoryProduct.all.collect { |c| [c.nome, c.id] }, prompt: "", label: 'Categoria' %>
	</div>
	
	<div class="span6">
		<%= f.association :mark, label: 'Marca' %>
	</div>
</div>

<div class="row-fluid">
	<div class="span4">
		<%= f.input :precoCompra, :input_html => { :type => 'text', :size => 35}, label: 'Preço de Compra' %>
	</div>
	<div class="span4">
		<%= f.input :precoVenda, label: 'Preço de Venda' %>
	</div>
	<div class="span4">
		<%= f.input :precoMedio, label: 'Preço Médio' %>
	</div>
</div>
<div class="row-fluid">
	<div class="span6">
		<%= f.input :quantidadeEstoqueMinimo, label: 'Estoque Mínimo' %>
	</div>
	<div class="span6">
		<%= f.input :quantidadeEstoqueMaximo, label: 'Estoque Máximo' %>
	</div>
</div>

<div class="row-fluid">
	<div class="span12">
		<%= f.input :observacao, label: 'Observação' %>
	</div>
</div>  
<div class="row-fluid">
	<div class="span12">
		<%= f.submit :class => 'btn btn-success'%>
	</div>
</div>

<% end %>
